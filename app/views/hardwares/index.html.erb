<p id="notice"><%= notice %></p>

<h1>Hardware</h1>

<table id="normal_dt"  class="stripe" class="mytable" class="display" cellspacing="0" >
  <thead>
    <tr>
      <th>Employee/Truck</th>
      <th>Device</th>
      <th>Serial number</th>
      <th>Returned?</th>
      <th>In stock?</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hardwares.each do |hardware| %>
      <tr>
        <td><%= hardware.owner %></td>
        <td><%= hardware.device_type %></td>
        <td><%= hardware.serial_number %></td>
        <% if hardware.return_date.blank? || hardware.return_date < hardware.issue_date %>
          <td> No </td>
        <% else %>
          <td> Yes </td>
        <% end %>
        <% if hardware.issue_date.blank? || (!hardware.return_date.blank? && hardware.return_date >= hardware.issue_date) %>
          <td> Yes </td>
        <% else %>
          <td> No </td>
        <% end %>
        <td><%= link_to 'Edit', edit_hardware_path(hardware) %></td>
        <td><%= link_to 'Delete', hardware, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

